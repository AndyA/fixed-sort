{
  "name": "fixed-sort",
  "version": "1.0.7",
  "description": "Comparison functions with fixed ordering for selected values.",
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf dist && npm run build:tsc && npm run build:cjs",
    "build:tsc": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "test": "jest",
    "tdd": "jest --watchAll",
    "prepack": "npm test && npm run build",
    "postversion": "npm publish",
    "postpublish": "git push origin --all && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndyA/fixed-sort.git"
  },
  "bugs": {
    "url": "https://github.com/AndyA/fixed-sort/issues"
  },
  "homepage": "https://github.com/AndyA/fixed-sort#readme",
  "keywords": [
    "sort",
    "order"
  ],
  "author": "Andy Armstrong <andy@hexten.net>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "types": "./dist/cjs/index.d.ts",
  "main": "./dist/cjs/index.js",
  "files": [
    "/dist"
  ]
}
